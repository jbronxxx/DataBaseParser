@model IEnumerable<DatabaseParser.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Employee</h1>
<br />
<div>
    <h4>Chose Database from File</h4>
    <form asp-controller="Parser" asp-action="DataBaseUpload" enctype="multipart/form-data" method="post">
        <input type="file" name="file" accept=".csv " />
        <button type="submit" class="btn btn-primary">Submit</button>
        <br />
    </form>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["PayrollNumberSort"]"> @Html.DisplayNameFor(model => model.PayrollNumber)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ForeNameSort"]"> @Html.DisplayNameFor(model => model.ForeNames)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["SurNameSort"]"> @Html.DisplayNameFor(model => model.SurName)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DateOfBirthSort"]">@Html.DisplayNameFor(model => model.DateOfBirth)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["TelephoneSort"]">@Html.DisplayNameFor(model => model.Telephone)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["MobileSort"]">@Html.DisplayNameFor(model => model.Mobile)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["AdressSort"]"> @Html.DisplayNameFor(model => model.Adress)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["Adress2Sort"]"> @Html.DisplayNameFor(model => model.Adress2)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["PostCodeSort"]">@Html.DisplayNameFor(model => model.PostCode)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["EmailHomeSort"]"> @Html.DisplayNameFor(model => model.EmailHome)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["StartDateSort"]"> @Html.DisplayNameFor(model => model.StartDate)</a>
            </th>
            <th>
                <a asp-action="AddOrEdit" class="btn btn-dark">Add Employee</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PayrollNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ForeNames)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SurName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telephone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mobile)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adress2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailHome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    <a asp-action="AddOrEdit" asp-route-id="@item.EmployeeId">Edit</a> |
                    |
                    <a asp-action="Delete" asp-route-id="@item.EmployeeId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
